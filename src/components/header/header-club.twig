    <div class="header__inner">
      <div class="header-club">
        <a class="header__logo" href="/">
          <img src="images/ico/logo.svg" loading="lazy" alt="" />
        </a>
        <div class="header-club__logo">
          {% include "@images/darts.svg" %}
          <span> Šipky </span>
        </div>
      </div>
      <nav class="nav">
        <ul class="nav-list">
          <li class="nav-item">
            <a href="#" class="nav-link"> Soupiska </a>
